<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<div class="table">
				<table>
					<%= form_with model:@card, url:admins_cards_path, method: :post do |f| %>
						<thead>
							<tr>
								<th>商品登録画面</th>
								<th><%= link_to "商品一覧へ", admins_cards_path %></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th>カード名</th>
								<td><%= f.text_field :name %></td>
							</tr>
							<tr>
								<th>カード説明文</th>
								<td><%= f.text_field :introduction %></td>
							</tr>
							<tr>
								<th>値段</th>
								<td><%= f.number_field :price, min: 0 %></td>
							</tr>
							<tr>
								<th>カード画像</th>
								<td><%= f.attachment_field :image %></td>
							</tr>
							<tr>
								<th>ジャンル選択</th>
								<td><%= f.collection_select(:genre_id, @genres, :id, :name ) %></td>
							</tr>
							<tr>
								<th>販売ステータス</th>
								<td><%= f.radio_button :is_active, checked: true %>販売中
								<%= f.radio_button :is_active, "売り切れ" %>売り切れ</td>
							</tr>
							<tr>
								<td><%= f.submit "新規作成" %></td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>