<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="table">
				<table>
					<thead>
						<th>顧客詳細画面</th>
						<tr>
							<th>氏名</th>
							<td><%= customer.full_name %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= customer.email %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= customer.postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= customer.address %></td>
						</tr>
						<tr>
							<th>電話番号</th>
							<td><%= customer.telephone_number %></td>
						</tr>
						<tr>
							<th>退会ステータス</th>
							<td><%= if customer.is_active == true %>
								会員
								<%= else customer.is_active == false %>
								退会
							</td>
						</tr>
						<tr>
							<%= link_to "顧客編集画面へ" edit_admins_customer_path(@customer) %>
							<%= link_to "顧客一覧へ" admins_customers_path %>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>
