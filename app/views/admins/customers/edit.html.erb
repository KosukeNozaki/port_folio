<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="table">
				<table>
					<thead>
						<h2>顧客編集画面</h2>
					</thead>
					<%= form_with model:@customer do |f| %>
					<tbody>
						<tr>
							<th>性</th>
							<td><%= f.text_field :last_name %></td>
						</tr>
						<tr>
							<th>名</th>
							<td><%= f.text_field :first_name %></td>
						</tr>
						<tr>
							<th>性カナ</th>
							<td><%= f.text_field :last_name_kana %></td>
						</tr>
						<tr>
							<th>名カナ</th>
							<td><%= f.attachment_field :first_name_kana %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= f.email_field :email %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= f.text_field :postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= f.text_field :address %></td>
						</tr>
						<tr>
							<th>退会ステータス</th>
							<td><%= f.radio_button :is_active, checked: true %>会員
							<%= f.radio_button :is_active, "退会" %>退会</td>
						</tr>
						<tr>
							<td><%= f.submit "情報更新" %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>