<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="table">
				<thead>
					<h2>ジャンル編集画面</h2>
				<%= form_with model:@genre, url:admins_genre_path, local:true do |f| %>
				<tbody>
					<tr>
						<th>ジャンル名</th>
						<th><%= f.text_field :name %></th>
					</tr>
					<tr>
						<th><%= f.submit "ジャンル登録" %></th>
					</tr>
				</tbody>
				<% end %>
			</div>
		</div>
	</div>
</div>