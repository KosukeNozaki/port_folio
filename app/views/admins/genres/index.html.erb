<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="table">
			<%= form_with model:@genre, url:admins_genres_path, method: :post, local:true do |f| %>
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th><%= f.text_field :name %></th>
					</tr>
					<tr>
						<th><%= f.submit "ジャンル登録" %></th>
					</tr>
			<% end %>
				</thead>
			</div>
		</div>
		<div class="col-xs-2">
			<div class="table">
						<h2>ジャンル一覧</h2>
				<% @genres.each do |genre| %>
						<h4><%= genre.name %></h4>
						<h6><%= link_to "削除", admins_genre_path(genre), method: :delete, data: {confirm: "本当に削除しますか？"} %></h6>
						<h6><%= link_to "ジャンル編集", edit_admins_genre_path(genre) %></h6>
				<% end %>
			</div>
		</div>
	</div>
</div>
