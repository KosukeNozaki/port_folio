<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<div class="table">
				<h2>注文履歴画面</h2>
				<table>
					<thead>
						<tr>
							<td>購入日時</td>
							<td>購入者</td>
							<td>注文個数</td>
							<td>注文ステータス</td>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<td><%= link_to order.created_at, admins_order_path(order) %></td>
							<td><%= order.name %></td>
							<td><%= order.order_items.sum(:amount) %></td>
							<td><%= order.status %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>