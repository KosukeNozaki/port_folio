<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<div class="table">
				<table>
					<thead>
						<h2>登録情報編集</h2>
					</thead>
					<%= form_with model:@customer, url:customer_path(@customer), local:true do |f| %>
					<tbody>
						<tr>
							<th>性</th>
							<td><%= f.text_field :last_name %></td>
						</tr>
						<tr>
							<th>名</th>
							<td><%= f.text_field :first_name %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= f.email_field :email %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= f.text_field :postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= f.text_field :address %></td>
						</tr>
						<tr>
							<td><%= f.submit "情報更新" %></td>
						</tr>
						<td><%= link_to "退会", customers_path %></td>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>