<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <div class="table">
        <table>
          <h2>ログイン</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <thead>
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label :パスワード %></th>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
              <td><%= f.submit "ログイン" %></td>
            </thead>
            <%= render "publics/shared/links" %>
          <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>