<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <div class="table">
        <table>
          <th>会員登録</th>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "publics/shared/error_messages", resource: resource %>
            <thead>
              <tr>
                <th><%= f.label :性 %></th>
                <td><%= f.text_field :last_name %></td>
              </tr>
              <tr>
                <th><%= f.label :名 %></th>
                <td><%= f.text_field :first_name %></td>
              </tr>
              <tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <th><%= f.label :パスワード %>
                <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字以上)</em></th>
                    <% end %>
                    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <th><%= f.label :パスワード確認 %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字以上)</em></th>
                    <% end %>
                    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <th><%= f.label :郵便番号 %></th>
                <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                <th><%= f.label :住所 %></th>
                <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                <th><%= f.label :電話番号 %></th>
                <td><%= f.text_field :telephone_number %></td>
              </tr>
            <tbody>
              <tr>
              </tr>
                <td><%= f.submit "新規登録", class: "btn btn-success btn-lg " %></td>
            <% end %>
          </thead>
          </tbody>
        </table>
      </div>
  </div>
</div>

