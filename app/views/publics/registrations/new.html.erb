<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <div class="table">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "publics/shared/error_messages", resource: resource %>
          <thead>
            <tr>
              <th><%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
            </tr>
            <tr>
              <th><%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %></th>
            </tr>
            <tr>
              <th><%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
            </tr>
            <tr>
              <th><%= f.label :性 %>
              <%= f.text_field :last_name %>
              <%= f.label :名 %>
              <%= f.text_field :first_name %></th>
            </tr>
              <%= f.submit "新規登録" %>
          <% end %>
        </thead>
      </div>
  </div>
</div>

