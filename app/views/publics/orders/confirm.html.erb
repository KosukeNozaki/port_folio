<div class="container">
	<div class="row">
		<div class="col-sm-7">
			<div class="table">
				<table>
					<thead>
						<tr>
							<th>商品名</th>
							<th>単価(税込)</th>
							<th>数量</th>
							<th>小計</th>
						</tr>
					<% @cart_cards.each do |cart_card| %>
					<tbody>
						<tr>
							<td><%= cart_card.card.name %></td>
							<td><%= cart_card.card.price %></td>
							<td><%= cart_card.amount %></td>
							<td><%= cart_card.sub_total_price %></td>
						</tr>
					</tbody>
					<% end %>
				</thead>
			</table>
			<table>
				<tbody>
					<tr>
						<th>送料</th>
						<td><%= @order.postage %></td>
					</tr>
						<th>商品合計</th>
						<td><%= current_customer.total_price %></td>
					<tr>
						<th>請求金額</th>
						<td><%= @order.postage + current_customer.total_price %></td>
					</tr>
				</tbody>
			</table>
		</div>
			<div class= "confirm-form">
				<div class="col-sm-4">
					<%= form_with(model: @order, url:orders_path, local:true) do |f| %>
						<%= f.label :支払い方法 %>
						<%= @order.payment_method %>
						<%= f.label :お届け先 %>
						<%= @order.postal_code %>
						<%= @order.address %>
						<%= @order.name %>
						<%= f.hidden_field :order_price, :value => current_customer.total_price %>
						<%= f.hidden_field :name, :value => @order.name %>
						<%= f.hidden_field :postal_code, :value => @order.postal_code %>
						<%= f.hidden_field :address, :value => @order.address %>
						<%= f.hidden_field :customer_id, :value => @order.customer_id %>
						<%= f.submit "注文を確定する" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

