<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<div class="table">
				<table>
					<h2>カート画面</h2>
					<thead>
						<tr>
							<th>カード名</th>
							<th>値段</th>
							<th>小計</th>
							<th>数量</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<% @cart_cards.each do |cart_card| %>
								<td><%= cart_card.card.name %></td>
								<td><%= cart_card.card.price %></td>
								<td><%= (cart_card.sub_total_price).to_i %></td>
							<%= form_with(model: cart_card, local:true) do |f| %>
								<td><%= f.number_field :amount, min: 1, max: 5 %></td>
	              				<td><%= f.submit '変更', class: "btn-btn-success" %></td>
	              					<% end %>
							<% end %>
						</tr>
					</tbody>
				</table>
				<%= button_to "全て削除", all_destroy_cart_cards_path, method: :delete, data: {confirm: "カートを空にしますか？"} %>
				<td><%= link_to "買い物を続ける", root_path %></td>
				<td><%= link_to "情報入力に進む", new_order_path %></td>
			</div>
		</div>
	</div>
</div>